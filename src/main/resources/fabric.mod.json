{
  "schemaVersion": 1,
  "id": "${id}",
  "version": "${version}",
  "name": "Minux",
  "description": "Replaces boring chat with a fun command shell",
  "authors": [
    "Supcheg"
  ],
  "license": "Apache-2.0",
  "icon": "assets/minux/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "me.supcheg.minux.Minux"
    ],
    "modmenu": [
      "me.supcheg.minux.config.ModMenuIntegration"
    ]
  },
  "mixins": [
    "minux.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric-api": ">=${fabric_version}",
    "minecraft": "${minecraft_version}"
  },
  "suggests": {
    "yet_another_config_lib_v3": ">=${yacl_version}",
    "mod_menu": ">=${modmenu_version}"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.modrinth": "https://modrinth.com/mod/minux"
      },
      "update_checker": true
    }
  }
}
